#!/usr/bin/env python3
# This file is in the Public Domain.


"check basics"


import os
import sys


IGNORE = ["control", "console", "daemon", "service"]
NAME = "sbn"


def ignore(txt):
    for ign in IGNORE:
        if ign in txt:
            return True
    return False


def popen(txt):
    for line in os.popen(txt).readlines():
        if ignore(line):
             continue
        print(line.rstrip())
        sys.stdout.flush()


def main():
    popen(f'grep -R {NAME} {NAME}')
    popen(f'grep -R "print(" {NAME}')
    popen(f'grep -R __import__ {NAME}')
    popen(f'grep -R importlib {NAME}')
    #popen(f'grep -R "import os" {NAME}')
    #popen(f'grep -R "import sys" {NAME}')
    #popen(f'grep -R "import inspect" {NAME}')
    #popen(f'grep -R getpass {NAME}')


if __name__ == "__main__":
    main()
